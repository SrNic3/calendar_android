<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.irene.calendar_android.MainActivity">

    <TextView
        android:text="Login DarkAqua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Titol"
        android:textStyle="normal|bold"
        android:textSize="30sp"
        android:textColor="@android:color/holo_blue_dark"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextUser"
        android:layout_below="@+id/Titol"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:hint="Nom usuari" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/editTextPassword"
        android:layout_below="@+id/editTextUser"
        android:layout_alignLeft="@+id/editTextUser"
        android:layout_alignStart="@+id/editTextUser"
        android:layout_marginTop="42dp"
        android:hint="Contrasenya" />

    <Button
        android:text="Iniciar sessiÃ³"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnIniciar"
        android:layout_below="@+id/editTextPassword"
        android:layout_alignLeft="@+id/Titol"
        android:layout_alignStart="@+id/Titol"
        android:layout_marginTop="20dp" />

    <Button
        android:text="Registrar-te"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegistrar"
        android:layout_below="@+id/btnIniciar"
        android:layout_alignLeft="@+id/btnIniciar"
        android:layout_alignStart="@+id/btnIniciar"
        android:layout_marginTop="31dp" />

</RelativeLayout>
